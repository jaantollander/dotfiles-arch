## i3bar
bar {
    status_command i3status --config "$XDG_CONFIG_HOME/i3/status.conf"
    
    # Disable all tray icons
    tray_output none

    # tray_output primary
    colors {
        background $black2
        statusline $white2
        separator $white2

        # border background text
        focused_workspace 	$background $background $red1
        active_workspace 	$black2 $black1 $white2
        inactive_workspace 	$black1 $black2 $foreground
        urgent_workspace 	$red1 $red1 $white2
        binding_mode 		$background $red2 $white2
    }
}



## Program Launcher
bindsym $mod+d exec --no-startup-id rofi -modi run -show run


## Monitors
include $XDG_CONFIG_HOME/xrandr/i3.conf


## Audio
include $XDG_CONFIG_HOME/pulse/i3.conf


## Backlights
include $XDG_CONFIG_HOME/brightnessctl/i3.conf


## Notifications
exec --no-startup-id dunst
